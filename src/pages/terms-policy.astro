  <script>
          // @ts-nocheck

    // Accordion behavior: one card open at a time
    (function(){
      const cards = Array.from(document.querySelectorAll('.card'));

      function closeAll(except){
        cards.forEach(c=>{
          if(c !== except){
            c.classList.remove('open');
            c.setAttribute('aria-expanded','false');
            const body = c.querySelector('.card-body');
            body.style.maxHeight = null;
          }
        });
      }

      function openCard(card){
        const body = card.querySelector('.card-body');
        closeAll(card);
        card.classList.add('open');
        card.setAttribute('aria-expanded','true');
        // ensure body has correct maxHeight for smooth slide
        body.style.maxHeight = body.scrollHeight + 'px';
      }

      function closeCard(card){
        const body = card.querySelector('.card-body');
        card.classList.remove('open');
        card.setAttribute('aria-expanded','false');
        body.style.maxHeight = null;
      }

      // attach events
      cards.forEach((card, idx) => {
        const body = card.querySelector('.card-body');
        // clicking card toggles it
        card.addEventListener('click', (e) => {
          // ignore clicks on links inside
          if (e.target.tagName.toLowerCase() === 'a') return;
          if (card.classList.contains('open')) closeCard(card);
          else openCard(card);
        });

        // keyboard support (Enter/Space)
        card.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            if (card.classList.contains('open')) closeCard(card);
            else openCard(card);
          }
        });
      });

      // recalc heights on resize for open card
      window.addEventListener('resize', () => {
        cards.forEach(c => {
          if (c.classList.contains('open')) {
            const b = c.querySelector('.card-body');
            b.style.maxHeight = b.scrollHeight + 'px';
          }
        });
      });
    })();
  </script>


