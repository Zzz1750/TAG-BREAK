<header class="header">
  <div class="header-left">
    <button class="menu-button" id="menuButton" aria-label="Open menu">
      <span class="menu-line"></span>
      <span class="menu-line"></span>
      <span class="menu-line"></span>
    </button>
    
    <div class="mobile-menu" id="mobileMenu">
      <div class="menu-content">
        <button class="close-button" id="closeButton" aria-label="Close menu">
          &times;
        </button>
        <nav class="mobile-nav">
          <a href="/" class="nav-link">Home</a>
          <a href="/shop" class="nav-link">Breakhouse</a>
          <a href="/gallery" class="nav-link">Breakroom</a>
          <a href="/collabs" class="nav-link">Collabs</a>
          <a href="/contact" class="nav-link">Contact</a>
          <a href="/policy" class="nav-link">Policy</a>
        </nav>
      </div>
    </div>
  </div>

  <div class="header-center">
    <a href="/" class="logo">
      <img src="/images/new_logo.png" alt="Logo" class="logo-image" />
    </a>
  </div>

  <div class="header-right">
    <button class="shop-button" id="shopButton" aria-label="Shop">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
      </svg>
    </button>
  </div>
</header>

<style is:global>
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.4rem 1.5rem;
    min-height: 55px;
    background: white;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
    z-index: 1000;
  }

  .header-left,
  .header-right {
    flex: 1;
    display: flex;
    align-items: center;
  }

  .header-right {
    justify-content: flex-end;
  }

  .header-center {
    flex: 2;
    display: flex;
    justify-content: center;
  }

  /* Menu Button Styles */
  .menu-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 4px;
    transition: opacity 0.2s;
  }

  .menu-button:hover {
    opacity: 0.7;
  }

  .menu-line {
    width: 20px;
    height: 2px;
    background: #333;
    transition: all 0.3s;
  }

  /* Logo Styles */
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 40px;
    width: auto;
    max-width: 250px;
    object-fit: contain;
  }

  /* Shop Button Styles */
  .shop-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    transition: opacity 0.2s;
    color: #333;
  }

  .shop-button:hover {
    opacity: 0.7;
  }

  /* Mobile Menu Styles */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    transition: left 0.3s ease-in-out;
    z-index: 1001;
    visibility: hidden;
    opacity: 0;
  }

  .mobile-menu.active {
    left: 0;
    visibility: visible;
    opacity: 1;
  }

  .menu-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 80%;
    max-width: 300px;
    height: 100%;
    background: white;
    padding: 2rem;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  .mobile-menu.active .menu-content {
    transform: translateX(0);
  }

  .close-button {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: #333;
    padding: 0.5rem;
    line-height: 1;
  }

  .close-button:hover {
    opacity: 0.7;
  }

  .mobile-nav {
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .nav-link {
    padding: 0.75rem 0;
    text-decoration: none;
    color: #333;
    font-size: 1.1rem;
    border-bottom: 1px solid #e5e5e5;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: #666;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .header {
      padding: 0.6rem 1rem;
      min-height: 45px;
    }
    
    .logo-image {
      height: 32px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menuButton');
    const closeButton = document.getElementById('closeButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const shopButton = document.getElementById('shopButton');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeButton && mobileMenu) {
      closeButton.addEventListener('click', () => {
        mobileMenu.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (mobileMenu) {
      mobileMenu.addEventListener('click', (e) => {
        if (e.target === mobileMenu) {
          mobileMenu.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenu && mobileMenu.classList.contains('active')) {
        mobileMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });

    if (shopButton) {
      shopButton.addEventListener('click', () => {
        console.log('Shop bag clicked!');
        window.location.href = '/shop';
      });
    }
  });
</script>