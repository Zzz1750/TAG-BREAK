  <style>
    :root{
      --bg:#1E4941;
      --text:#E3BCAE;
      --card-bg: rgba(255,255,255,0.03);
      --card-border: rgba(255,255,255,0.06);
      --muted: rgba(227,188,174,0.22);
      --max-width:980px;
    }
    *{box-sizing:border-box}
    html,body{height:100%;margin:0}
    body{
      font-family:'Abel',system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial;
      background:var(--bg);
      color:var(--text);
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      line-height:1.6;
    }

    /* Page title */
    .page-title{max-width:var(--max-width);margin:0 auto 8px;text-align:center; margin-top: 60px;}
    .page-title h1{font-family:'Aldrich';font-size:32px;margin:0;color:var(--text);letter-spacing:0.4px}
    .page-title .updated{font-size:13px;color:var(--muted);margin-top:6px}

    .wrap{max-width:var(--max-width);margin:16px auto; padding: 20px 10px;}

    /* Card */
    .card{
      background:var(--card-bg);
      border-radius:12px;
      border:1px solid var(--card-border);
      padding:18px;
      margin-bottom:14px;
      cursor:pointer;
      overflow:hidden;
      transition:box-shadow 220ms ease, transform 220ms ease;
    }
    .card:hover{transform:translateY(-2px)}
    .card.open{box-shadow:0 10px 30px rgba(0,0,0,0.45), 0 0 18px rgba(227,188,174,0.06); border-color: rgba(227,188,174,0.14)}
    .card-head {display:block}
    .card-head h2{margin:0;font-family:'Aldrich';font-size:22px;color:var(--text);text-align:left}

    /* Body content hidden until expanded */
    .card-body{
      max-height:0;
      overflow:hidden;
      transition:max-height 420ms ease, padding 220ms ease;
      padding-top:0;
    }
    .card.open .card-body{padding-top:14px}

    /* text sizes per your request */
    p, li { font-size:18px; color:var(--text); margin:8px 0; }
    ul { padding-left:20px; margin:6px 0; }

    .muted { color:var(--muted); font-size:13px; margin:0 0 8px 0; }

    @media (max-width:700px){
      .page-title h1{font-size:26px}
      .card { padding:14px }
      .card-head h2 { font-size:20px }
      p, li { font-size:15px }
    }
  </style>
